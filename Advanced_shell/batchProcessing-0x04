#!/bin/bash

mkdir -p pokemon_data

pokemons=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

for p in "${pokemons[@]}"
do
  (
    echo "Fetching data for $p..."
    response=$(curl -s -w "%{http_code}" -o "pokemon_data/${p}.json" "https://pokeapi.co/api/v2/pokemon/$p")
    if [ "$response" -eq 200 ]; then
      echo "Saved data to pokemon_data/${p}.json âœ…"
    else
      echo "Error fetching $p" >> errors.txt
    fi
  ) &
done

wait
